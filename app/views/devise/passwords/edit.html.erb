<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <div class="card">
        <div class="card-header text-center">
          <h3>Cambiar contraseña</h3>
        </div>
        <div class="card-body">
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>

            <div class="form-group">
              <%= f.label :password, "Nueva contraseña", class: "form-label" %>
              <% if @minimum_password_length %>
                <small class="text-muted">(mínimo <%= @minimum_password_length %> caracteres)</small>
              <% end %>
              <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
            </div>
            <br/>

            <div class="form-group">
              <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "form-label" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
            </div>
            <br/>

            <div class="text-center">
              <%= f.submit "Cambiar mi contraseña", class: "btn btn-primary" %>
            </div>
          <% end %>
          <br/>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
