<%- if controller_name != 'sessions' %>
  <%= link_to "Iniciar sesión", new_session_path(resource_name), class: "btn btn-outline-secondary w-100" %><br />
  
<% end %>


<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Registro", new_registration_path(resource_name), class: "btn btn-outline-secondary w-100" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "¿Has olvidado tu contraseña?", new_password_path(resource_name), class: "btn btn-outline-secondary w-100" %><br />
<% end %>

