
<div class="container text-center my-4">
    <h1 class="display-4">Bienvenido a Barbería Javier</h1>
    <% if user_signed_in? %>
        <a class="lead text-reset" href="/appointments">Reserva una cita aquí</a>
    <% else %>
        <a class="lead text-reset" href="/sign_up">Regístrate si aún no tienes una cuenta</a> o <a class="lead text-reset" href="/sign_in">inicia sesión si ya tienes una</a>
    <% end %>
</div>

<div class="container d-flex justify-content-center">
    <div id="carousel" class="carousel slide w-100" data-bs-ride="carousel" style="max-width: 70vw;">
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="2"></button>
        <button type="button" data-bs-target="#carousel" data-bs-slide-to="3"></button>
    </div>
    <div class="carousel-inner">
        <div class="carousel-item active">
        <%= image_tag "img4.jpg", alt:"Imágen 1" , class:"d-block w-100", height: 800 %>
        </div>
        <div class="carousel-item">
        <%= image_tag "img1.jpeg", alt:"Imágen 2" , class:"d-block w-100", height: 800 %>
        </div>
        <div class="carousel-item">
        <%= image_tag "img2.png", alt:"Imágen 3" , class:"d-block w-100", height: 800 %>
        </div>
        <div class="carousel-item">
        <%= image_tag "img3.webp", alt:"Imágen 4" , class:"d-block w-100", height: 800 %>
        </div>
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carousel" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carousel" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
    </div>
</div>
<br/><br/><br/>