<div class="container my-5">
  <div class="text-center mb-4">
    <h1 class="display-5 fw-bold text-dark">
      <i class="bi bi-cash-stack me-2"></i> Tarifas de Servicios
    </h1>
    <p class="lead text-muted">Consulta los precios actualizados de todos nuestros servicios</p>
  </div>

  <div class="d-flex justify-content-center">
    <div class="table-responsive" style="max-width: 700px;">
      <table class="table table-striped table-hover border shadow rounded-3 overflow-hidden">
        <thead class="table-dark text-center">
          <tr>
            <th>Servicio</th>
            <th>Descripción</th>
            <th>Precio</th>
          </tr>
        </thead>
        <tbody class="text-center">
          <% @services.each do |service| %>
            <tr>
              <td><%= service.name %></td>
              <td><%= service.description %></td>
              <td><strong><%= number_to_currency(service.price, unit: "€") %></strong></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
