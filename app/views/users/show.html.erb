<div class="container mt-5">
  <h1>¡Bienvenido, <%= @user.first_name %> <%= @user.last_name %>!</h1>
  <h4>Este es tu perfil personal.</h4>
  
  <p>Email: <%= @user.email %></p>
  <div class="container" style="margin-top: 100px;">
  <% if current_user.appointments.any? %>
    <h2> Tus citas programadas </h2><br/>
    <% current_user.appointments.each do |appointment| %>
      <div style="border: 1px solid #ccc; padding: 12px; margin-bottom: 10px; max-width: 300px; display: flex; align-items: center; gap: 10px; border-radius: 6px;">
        <%= image_tag "logo.png", alt: "Barber app", style: "width: 60px; height: 60px; object-fit: contain;" %>
        <div>
          <p style="margin: 0; font-weight: bold;">
            <span style="font-weight: normal; color: black;">
            <%= (appointment.scheduled_at.strftime("%d/%m/%Y %H:%M")) %>
          </span>
          </p>
          <div>
        <%= button_to "Cancelar cita", appointment_path(appointment), method: :delete, data: { confirm: "¿Estás seguro de que deseas cancelar esta cita?" }, class: "btn btn-sm btn-danger" %>
      </div>
        </div>
      </div>
    <% end %>
  <% else %>
    <h2>No tienes citas programadas</h2>
  <% end %>
  </div>
</div>
